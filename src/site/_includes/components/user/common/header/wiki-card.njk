{# src/site/_includes/components/user/common/header/wiki-card.njk #}

{% set currentSlug = page.fileSlug or 'NO-SLUG' %}

<div style="
    float: right; /* Permite que el texto fluya */
    width: 250px; /* Ancho fijo */
    margin: 0 0 1em 1em; /* Espaciado */
    border: 3px dashed var(--accent-color, red);
    padding: 10px; 
    background-color: var(--background-modifier-hover, #ffeaea);
    border-radius: 6px;
    font-size: 0.9em;
">
    <h3>✅ COMPONENTE CARGADO</h3>
    <p>Título de la nota: **{{ title or 'SIN TÍTULO' }}**</p>
    <p>Slug del archivo: **{{ currentSlug }}**</p>
</div>
