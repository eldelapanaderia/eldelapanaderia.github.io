// src/site/_data/notesFrontmatter.js
module.exports = function (eleventyConfig) {
  const notes = {};

  // Recorremos la colecci√≥n de notas
  for (const note of eleventyConfig.collections.notes) {
    // Usamos el slug como clave
    notes[note.fileSlug] = {};

    // Copiamos solo las propiedades que queremos exponer
    const ignoreKeys = ["page", "layout", "content", "eleventyComputed"];
    for (const key in note.data) {
      if (!ignoreKeys.includes(key)) {
        notes[note.fileSlug][key] = note.data[key];
      }
    }
  }

  return notes;
};
